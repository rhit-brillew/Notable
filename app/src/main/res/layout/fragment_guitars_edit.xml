<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.rosehulman.notable.ui.guitars.GuitarsEditFragment">

    <TextView
        android:id="@+id/text_guitar_name"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edit_guitar_name"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/edit_guitar_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Guitar Name"
        android:importantForAutofill="no"
        android:layout_below="@id/text_guitar_name"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/text_guitar_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_below="@id/edit_guitar_name"
        android:layout_alignLeft="@id/edit_guitar_name"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edit_guitar_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Guitar Description"
        android:importantForAutofill="no"
        android:layout_below="@id/text_guitar_description"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        />

    <ImageView
        android:id="@+id/guitar_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/edit_guitar_description"
        android:layout_centerHorizontal="true"
        android:src="@drawable/guitar_icon2"/>

    <Button
        android:id="@+id/guitar_change_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guitar_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Change Photo" />

    <Button
        android:id="@+id/edit_guitar_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        />


</RelativeLayout>