<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.rosehulman.notable.ui.guitars.GuitarsDetailFragment">

    <TextView
        android:id="@+id/guitar_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Title"
        android:textSize="40sp"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:id="@+id/guitar_detail_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/guitar_detail_title"
        android:src="@drawable/guitar_icon2"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/guitar_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/guitar_detail_image"
        android:text="Description"
        android:layout_marginBottom="100dp"
        />

    <Button
        android:id="@+id/guitar_detail_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/guitar_detail_description"
        android:text="Edit"
        />

</RelativeLayout>